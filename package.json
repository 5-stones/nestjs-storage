{
  "name": "@codebrew/nestjs-storage",
  "version": "0.1.7",
  "description": "Nestjs file system wrapping flydrive",
  "author": "David Kwon",
  "license": "MIT",
  "url": "https://github.com/codebrewlab/nestjs-storage",
  "scripts": {
    "jest": "jest",
    "build": "rimraf -rf dist && tsc -p ./tsconfig.lib.json",
    "lint": "eslint 'lib/**/*.ts' --fix",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "test": "jest --config ./tests/jest-e2e.json --runInBand",
    "prerelease": "npm run build",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-angular": "^19.6.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.16.0",
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/testing": "^10.4.15",
    "@slynova/flydrive": "^1.0.3",
    "@slynova/flydrive-gcs": "^1.0.3",
    "@slynova/flydrive-s3": "^1.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.68",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "console-testing-library": "^0.6.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.2",
    "release-it": "17.10.0",
    "rimraf": "^5.0.10",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^6.10.0 || ^7.0.0 || ^8.0.0 || ^9.0.0 || ^10.0.0",
    "@slynova/flydrive": "^1.0.2",
    "@slynova/flydrive-gcs": "^1.0.2",
    "@slynova/flydrive-s3": "^1.0.2",
    "reflect-metadata": "^0.1.13"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codebrewlab/nestjs-storage"
  },
  "publishConfig": {
    "access": "public"
  }
}
